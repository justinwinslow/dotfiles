# JWin's Bash prompt

if [[ $COLORTERM = gnome-* && $TERM = xterm ]]  && infocmp gnome-256color >/dev/null 2>&1; then export TERM=gnome-256color
elif [[ $TERM != dumb ]] && infocmp xterm-256color >/dev/null 2>&1; then export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
    tput sgr0
    if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
      RED=$(tput setaf 9)
      ORANGE=$(tput setaf 172)
      GREEN=$(tput setaf 190)
      MAGENTA=$(tput setaf 5)
      WHITE=$(tput setaf 256)
      GREY=$(tput setaf 245)
    else
      RED=$(tput setaf 1)
      ORANGE=$(tput setaf 4)
      GREEN=$(tput setaf 2)
      MAGENTA=$(tput setaf 5)
      WHITE=$(tput setaf 7)
      GREY=$(tput setaf 7)
    fi
    BOLD=$(tput bold)
    RESET=$(tput sgr0)
else
    RED="\033[1;31m"
    ORANGE="\033[1;33m"
    GREEN="\033[1;32m"
    MAGENTA="\033[1;35m"
    WHITE="\033[0;37m"
    GREY="\033[0;37m"
    BOLD=""
    RESET="\033[m"
fi

parse_git_dirty () {
  [[ $(git status 2> /dev/null | tail -n1) != "nothing to commit, working directory clean" ]] && echo "*"
}
parse_git_branch () {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}

PS1="\[$GREEN\]\u\[$GREY\]@\[$ORANGE\]\h \[$GREY\]in \[$WHITE\]\w\[$GREY\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \")\[$MAGENTA\]\$(parse_git_branch)\[$GREY\] â™« \[$GREY\]\n\$ \[$RESET\]"

PS2="\[$GREY\]> \[$RESET\]"
